<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <!--
        WhisperManager - Modular addon structure
        Load order matters: Core -> Utilities -> UI Components -> Events
    -->
    
    <!-- Core initialization and utilities -->
    <Script file="Core.lua"/>
    <Script file="PlayerUtils.lua"/>
    <Script file="History.lua"/>
    
    <!-- UI Components -->
    <Script file="Window.lua"/>
    <Script file="RecentChats.lua"/>
    <Script file="HistoryViewer.lua"/>
    <Script file="FloatingButton.lua"/>
    <Script file="Settings.lua"/>
    
    <!-- Event handlers (must be loaded after all UI components) -->
    <Script file="Events.lua"/>
    
    <!-- Main initialization (must be loaded last) -->
    <Script file="WhisperManager.lua"/>
</Ui>